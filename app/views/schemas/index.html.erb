<div id='audit'>
  <div class='row'>
    <div class='col-12'>
      <div class='box'>
        <h1>Schemas</h1>
      </div>
    </div>
  </div>

  <div class='row datatable'>
    <div class='col-12'>
      <div class='box'>
        <table class='table table-striped datatable'>
          <thead>
            <tr>
              <th>Name</th>
              <th>URL</th>
              <th>Comment</th>
            </tr>
          </thead>

          <tbody>
            <% @schemas.each do |schema| %>
              <tr>
                <td><%= schema.name %></td>
                <td><%= link_to("#{schema.url}", schema.url) %></td>
                <td><%= schema.comment.html_safe %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

