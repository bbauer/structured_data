<div class="row">
  <div class="col-12">
    <div class='box'>
      <div class='evaluation'>
        <h1><span class='badge badge-purple'>Schema Analyzer</h1>

        <p>Enter a URL to analyze a webpage for structured data elements</p>

        <%= form_for :analysis, url: analyses_path, method: :post do |f|%>
          <%= f.text_field(:url, placeholder: 'Enter URL', required: true, class: 'crawlit') %><br>
          <%= f.submit('Start Analyzing', class: 'btn btn-light') %>
        <%end%>
      </div>
    </div>
  </div>
</div>
